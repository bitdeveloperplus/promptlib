generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // hashed password
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  prompts   Prompt[]
  folders   Folder[]
  tags      Tag[]

  @@map("users")
}

// Prompt Model
model Prompt {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  title           String
  content         String   @db.Text
  description     String?  @db.Text
  isPublic        Boolean  @default(false) @map("is_public")
  currentVersionId String?  @map("current_version_id") // For future version control
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  folders         PromptFolder[]
  tags            PromptTag[]
  versions        PromptVersion[] // For future version control (not used yet)

  @@index([userId])
  @@index([isPublic])
  @@index([createdAt])
  @@index([currentVersionId])
  @@map("prompts")
}

// Prompt Version Model (for future version control - not used in MVP)
model PromptVersion {
  id            String   @id @default(uuid())
  promptId      String   @map("prompt_id")
  versionNumber Int      @map("version_number")
  content       String   @db.Text
  parentVersionId String? @map("parent_version_id") // For branching (future)
  createdBy     String   @map("created_by")
  changeSummary String?  @db.Text @map("change_summary")
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  prompt        Prompt         @relation(fields: [promptId], references: [id], onDelete: Cascade)
  parent        PromptVersion? @relation("VersionHierarchy", fields: [parentVersionId], references: [id], onDelete: SetNull)
  children      PromptVersion[] @relation("VersionHierarchy")

  @@unique([promptId, versionNumber])
  @@index([promptId])
  @@index([parentVersionId])
  @@map("prompt_versions")
}

// Folder Model (for organization)
model Folder {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  parentId    String?  @map("parent_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent      Folder?         @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Folder[]        @relation("FolderHierarchy")
  prompts     PromptFolder[]

  @@index([userId])
  @@index([parentId])
  @@map("folders")
}

// Junction table for Prompt-Folder relationship (many-to-many)
model PromptFolder {
  id       String @id @default(uuid())
  promptId String @map("prompt_id")
  folderId String @map("folder_id")

  // Relations
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  folder   Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@unique([promptId, folderId])
  @@index([promptId])
  @@index([folderId])
  @@map("prompt_folders")
}

// Tag Model
model Tag {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompts   PromptTag[]

  @@unique([userId, name])
  @@index([userId])
  @@map("tags")
}

// Junction table for Prompt-Tag relationship (many-to-many)
model PromptTag {
  id       String @id @default(uuid())
  promptId String @map("prompt_id")
  tagId    String @map("tag_id")

  // Relations
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([promptId, tagId])
  @@index([promptId])
  @@index([tagId])
  @@map("prompt_tags")
}

